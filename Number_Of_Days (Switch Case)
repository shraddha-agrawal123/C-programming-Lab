#include <stdio.h>

int main()
{
 int day;
 printf("Enter the month");
 scanf("%d", &day);
 switch (day)
 {
     case 1:
     case 3:
     case 5:
     case 7:
     case 8:
     case 10:
     case 12:
     printf("31 days");
     break;
     case 2:
     printf("28 days");
     break;
     case 4:
     case 6:
     case 9:
     case 11:
     printf("30 days");
     break;
     deault ("Plz enter a valid month");
}

    return 0;
}
