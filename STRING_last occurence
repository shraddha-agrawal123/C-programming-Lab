#include <stdio.h>
#include <string.h>

int main()
{
 char a[100], ch;
  int index=-1,i,len;
printf("Enter string");
gets(a);
printf("\nEnter the character which u find the first occurence\n");
scanf("%c",&ch);
len=strlen(a);
for(i=0;i<=len-1;i++){
    if(a[i]==ch){
        index=i;
        
    }
}
if(index==-1){
    printf("sorry no word present");
}
else
printf("character %c present at %d position",ch,index+1);

    return 0;
}
