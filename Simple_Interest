#include<stdio.h>
#include<math.h>
int main()
{
    float p,t,r,interest;
    printf("Enter Principle amount \n");
    scanf("%f",&p);
    printf("Enter Time\n");
    scanf("%f",&t);
    printf("Enter Rate\n");
    scanf("%f",&r);
    interest=(p*t*r)/100;
    printf("Simple interset is:\n%f",interest);
return 0;
}
